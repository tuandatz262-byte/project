# Copy file này thành .env và điền thông tin thật

# MongoDB connection string
# Lấy từ MongoDB Atlas: https://cloud.mongodb.com
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/portfolio_auth?retryWrites=true&w=majority

# JWT Secret key - đặt chuỗi ngẫu nhiên dài, khó đoán
JWT_SECRET=your_super_secret_key_change_this_in_production_min_32_chars

# JWT hết hạn sau bao lâu
JWT_EXPIRES_IN=7d

# Port server
PORT=5000

# Frontend URL (để cấu hình CORS)
FRONTEND_URL=http://localhost:3000
